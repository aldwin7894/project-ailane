{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "Preserve",
    "lib": [
      "dom",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "vite/client",
      "node"
    ],
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    "dist",
    "out",
    ".vite"
  ]
}
